<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GroupInfoActivity">

    <ImageView
        android:id="@+id/groupImageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:minHeight="300dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/group_image" />

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#797c95"
        android:padding="5dp"
        android:text="Social Codia"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvCreatedBy" />

    <TextView
        android:id="@+id/tvGroupDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#797c95"
        android:padding="5dp"
        android:text="Group Description"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/groupImageIcon" />

    <TextView
        android:id="@+id/tvCreatedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#797c95"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="Created By Social Codia at 12:45"
        app:layout_constraintBottom_toBottomOf="@+id/groupImageIcon" />

    <TextView
        android:id="@+id/tvEditGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_info_white"
        android:padding="5dp"
        android:text=" Edit Group"
        android:textStyle="bold"
        android:textSize="20sp"
        android:drawableTint="#000000"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>