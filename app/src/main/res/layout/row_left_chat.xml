<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/chat_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivChatImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/person_male"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:paddingRight="12dp"
            android:paddingLeft="20dp"
            android:scaleType="fitCenter"
            android:background="@drawable/chat_left_bg"
            />

        <TextView
            android:id="@+id/tvChatMessage"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_left_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="25dp"
            android:text="Hello World This Is Umair Farooqui"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvChatTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="12:45 Am"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>